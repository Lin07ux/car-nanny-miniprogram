/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/** weui **/
.justify .weui-label {
  text-align: justify;
  text-align-last: justify;
  padding-right: 1em;
  box-sizing: border-box;
}
.required .weui-label {
  position: relative;
}
.required .weui-label::after {
  content: '*';
  color: red;
  position: absolute;
  margin-left: .3em;
}
