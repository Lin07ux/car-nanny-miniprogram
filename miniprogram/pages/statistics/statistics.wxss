.query {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  width: 100%;
  padding: 20rpx 20rpx 0;
  box-sizing: border-box;
}
.query .item {
  width: 7em;
  margin-bottom: 8px;
}
.query .label {
  color: #8D9095;
  font-size: .85em;
  line-height: 1;
  margin: 5px 3px;
  font-weight: lighter;
}
.query .picker {
  color: #525457;
  padding: 3px 8px;
  line-height: 2;
  text-align: center;
  border: 1rpx solid #CFD3DC;
}

.actions {
  padding: 10rpx 30rpx;
}
.actions .item {
  display: flex;
  width: 100%;
  padding: 10rpx 18rpx 10rpx 24rpx;
  margin: 30rpx 0;
  box-sizing: border-box;
  border: 1rpx solid #CFD3DC;
}
.actions .license-no {
  width: 7em;
  letter-spacing: 1px;
  font-size: 1.2em;
  line-height: 4em;
  margin: auto;
}
.actions .detail {
  flex: 1;
  color: #525457;
  text-align: right;
}

.t-fab {
  bottom: 35vh;
  right: 5vw;
  font-size: 14px;
}